{
  "name": "@nzws/room-console",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@nzws/prettier-config": "^1.0.0",
    "@yuzulabo/eslint-config": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "kleur": "^4.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.3",
    "sequelize-cli": "^5.5.1"
  },
  "dependencies": {
    "@ant-design/colors": "^4.0.0",
    "@ant-design/icons": "^4.2.1",
    "antd": "^4.3.4",
    "dotenv": "^8.2.0",
    "got": "^11.3.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.0.1",
    "koa-send": "^5.0.0",
    "ky": "^0.20.0",
    "mariadb": "^2.4.0",
    "nodemailer": "^6.4.8",
    "prop-types": "^15.7.2",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^6.0.5",
    "sequelize": "^5.21.6",
    "styled-components": "^5.1.1"
  },
  "prettier": "@nzws/prettier-config",
  "scripts": {
    "build:server": "cross-env NODE_ENV=production babel app -d build --copy-files",
    "build:client": "parcel build web/index.html -d dist --public-url ./ --no-source-maps",
    "build": "npm-run-all build:* -s",
    "dev:server": "nodemon --exec \"cross-env NODE_ENV=development node -r @babel/register -r dotenv/config app\" -e js,pug,json --watch app --delay 500ms",
    "dev:client": "parcel watch web/index.html -d dist --public-url /assets/ --no-hmr",
    "dev": "npm-run-all --parallel dev:*",
    "start": "cross-env NODE_ENV=production node -r dotenv/config build",
    "manage:sync": "babel-node -r dotenv/config scripts/db-sync.js",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:js": "eslint \"**/*.js\" --cache --ignore-path .gitignore",
    "lint": "npm-run-all lint:* -p",
    "format:prettier": "prettier --write --ignore-path .gitignore .",
    "format:js": "eslint --fix \"**/*.js\" --cache --ignore-path .gitignore",
    "format": "npm-run-all format:* -s"
  }
}
